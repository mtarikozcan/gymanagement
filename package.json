{
  "name": "pulsegym",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "db:generate": "npm run db:generate --workspace=@pulsegym/api",
    "db:push": "npm run db:push --workspace=@pulsegym/api",
    "db:seed": "npm run db:seed --workspace=@pulsegym/api",
    "db:setup": "npm run db:push && npm run db:seed",
    "clean": "turbo run clean && rm -rf node_modules"
  },
  "devDependencies": {
    "turbo": "^2.3.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "npm@10.2.0"
}